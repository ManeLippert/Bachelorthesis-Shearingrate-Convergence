! Linear microtearing template file.  FJC 14.12.12 
! Gets the answer in about an hour on 256 processors
&CONTROL
 collisions= .true.,     ! Read the collisions namelist below
 read_file= .true.,      ! Read the restart file if present 
 !non_linear= .true.,
 dtim=   0.00500000,     ! This value will be overridden
 fac_dtim_est=0.8        ! Scaling factor on Courant condition
 ntime= 4000,
 naverage= 100,
 nlapar= .true.,         ! Keep A||
 nlbpar= .true.,         ! Keep compressional magnetic field
 gamatol=1e-7            ! stop at this standard deviation of the growth rate
