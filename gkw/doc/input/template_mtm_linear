 /
&ROTATION
 vcor=   0.0,      ! Mach number
 coriolis=.true.
 cf_trap=.false.   ! Use these to turn on centrifugal effects
 cf_drift=.false.  ! Use these to turn on centrifugal effects
 /
&COLLISIONS
 rref=   0.79,     ! Major radius (m)
 tref=   0.751,    ! In keV
 nref=   4.32,     ! In 10e19 m^-3
 pitch_angle= .true.,
 en_scatter=.true.
 friction_coll=.true.
 !mom_conservation=.true.
 !ene_conservation= .true.,
 freq_override= .false.,  ! set this to true to use the collision frequency below
 coll_freq=0.001          ! ion-ion collision freiuency (Rref/vthref)
 zeff=   1.1792,
 /
&DIAGNOSTIC
! lphi_diagnostics = .true.   !Meta switch for 2-D diaganostics for nonlinear or mode_box runs      (default = T)
                        ! The following xy_* switches produce both power spectrum and real space versions
! xy_phi = .true.       ! Electrostatic potential in perpendicular plane at LFS midplane            (default = T)
! xy_dens = .true.      ! Per species densities in perpendicular plane at LFS midplane              (default = F)
! xy_temp = .true.      ! Per species temperatures in perpendicular plane at LFS midplane           (default = F)
! xy_apar = .true.      ! Parallel vector potential in perpendicular plane at LFS midplane (default = F)
