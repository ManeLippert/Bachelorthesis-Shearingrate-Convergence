
&CONTROL
 fac_dtim_est=0.95
 silent = .false.
 order_of_the_scheme = 'second_order'
 parallel_boundary_conditions = 'zero'
 READ_FILE  = .false.
 NON_LINEAR = .false.
 zonal_adiabatic = .false.,
 METHOD = 'EXP',
 METH   = 2, 
 DTIM   = 0.005 
 NTIME  = 5,
 NAVERAGE = 10,
 nlapar = .false., 
 collisions = .false.
