 ! the issue occurs whenever shear_profile=linear, even if shear_rate = 0
 ! suggests the call to shift_bcs in exp_integration is broken
 disp_y = 0.0
 max_sec = 1000
 !lverbose= .true.
 normalized= .false.
 normalize_per_toroidal_mode = .false.
 spectral_radius=.false.
